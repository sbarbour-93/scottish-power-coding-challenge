<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScottishPowerAlbums" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/scottish_power_green</item>
        <item name="colorPrimaryVariant">@color/scottish_power_green_variant</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/scottish_power_blue</item>
        <item name="colorSecondaryVariant">@color/scottish_power_blue_variant</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Toolbar styling -->
        <item name="toolbarStyle">@style/MyThemeOverlay.App.Toolbar</item>
        <item name="actionOverflowButtonStyle">@style/MyThemeOverlay.App.OverflowButtonStyle</item>

        <!-- Progress spinner styling -->
        <item name="circularProgressIndicatorStyle">
            @style/Widget.App.CircularProgressIndicator
        </item>
    </style>

    <style name="MyThemeOverlay.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary" />

    <style name="MyThemeOverlay.App.OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="Widget.App.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="materialThemeOverlay">@style/MyThemeOverlay.App.CircularProgressIndicator</item>
        <item name="trackThickness">@dimen/circular_progress_indicator_track_thickness</item>
    </style>

    <style name="MyThemeOverlay.App.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/scottish_power_blue</item>
    </style>


</resources>